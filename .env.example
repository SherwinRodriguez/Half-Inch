# ===================================
# BLOCKCHAIN CONFIGURATION
# ===================================
# RPC URL for Rootstock testnet
RPC_URL=https://public-node.testnet.rsk.co

# Alternative RPC endpoints (comma-separated)
RPC_ENDPOINTS=https://public-node.testnet.rsk.co,https://rpc.testnet.rootstock.io/public,https://mycrypto.testnet.rsk.co

# ===================================
# SMART CONTRACT ADDRESSES
# ===================================
# Factory contract address (deployed)
FACTORY_ADDRESS=0x4D2C0FAB9913195dAa59C5819477cF5461e156B3

# Router contract address (deployed)
ROUTER_ADDRESS=0x1234567890123456789012345678901234567890

# RebalancerController contract address (deployed)
REBALANCER_ADDRESS=0x1234567890123456789012345678901234567890

# WTRBTC (Wrapped tRBTC) contract address
WTRBTC_ADDRESS=0x1234567890123456789012345678901234567890

# ===================================
# KEEPER CONFIGURATION
# ===================================
# Private key for keeper operations (DO NOT COMMIT THE REAL ONE)
KEEPER_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef12

# Maximum gas price for keeper operations (in wei)
MAX_GAS_PRICE=20000000000

# Rebalancing cooldown period (in seconds)
REBALANCE_COOLDOWN=3600

# Maximum slippage tolerance (in basis points, 50 = 0.5%)
MAX_SLIPPAGE=50

# ===================================
# API CONFIGURATION
# ===================================
# Next.js environment
NODE_ENV=development

# API base URL
NEXT_PUBLIC_API_URL=http://localhost:3000

# ===================================
# DATABASE CONFIGURATION
# ===================================
# Database URL (if using external database)
# DATABASE_URL=postgresql://user:password@localhost:5432/hues_dex

# Redis URL (for caching)
# REDIS_URL=redis://localhost:6379

# ===================================
# MONITORING & ANALYTICS
# ===================================
# Enable debug logging
DEBUG=true

# Pool monitoring interval (in milliseconds)
POOL_MONITOR_INTERVAL=30000

# Maximum number of pools to monitor
MAX_POOLS=100

# ===================================
# SECURITY
# ===================================
# JWT secret for API authentication
# JWT_SECRET=your-super-secret-jwt-key

# API rate limiting
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=900000

# ===================================
# EXTERNAL SERVICES
# ===================================
# Price feed API key (if using external price feeds)
# PRICE_FEED_API_KEY=your-api-key

# Block explorer API key
# BLOCK_EXPLORER_API_KEY=your-api-key

# ===================================
# DEPLOYMENT
# ===================================
# Deployment network
NETWORK=rootstock-testnet

# Deployer private key (DO NOT COMMIT THE REAL ONE)
DEPLOYER_PRIVATE_KEY=0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef12

# Gas price for deployments (in gwei)
DEPLOYMENT_GAS_PRICE=1

# Gas limit for deployments
DEPLOYMENT_GAS_LIMIT=8000000
